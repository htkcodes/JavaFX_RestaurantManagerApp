         <children>
            <Label contentDisplay="CENTER" text=" Table Number" textAlignment="CENTER">
               <font>
                  <Font name="Futura Bold" size="14.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" text=" Date / Time" textAlignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font name="Futura Bold" size="14.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" text=" Items" textAlignment="CENTER" GridPane.rowIndex="2">
               <font>
                  <Font name="Futura Bold" size="14.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" text=" Total Cost" textAlignment="CENTER" GridPane.rowIndex="3">
               <font>
                  <Font name="Futura Bold" size="14.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" text=" Special Requests" textAlignment="CENTER" GridPane.rowIndex="4">
               <font>
                  <Font name="Futura Bold" size="14.0" />
               </font>
            </Label>
            <Label contentDisplay="CENTER" text=" Comments" textAlignment="CENTER" GridPane.rowIndex="5">
               <font>
                  <Font name="Futura Bold" size="14.0" />

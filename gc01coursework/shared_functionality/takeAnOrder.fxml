      <Button fx:id="saveOrderButton" layoutX="217.0" layoutY="550.0" mnemonicParsing="false" onAction="#saveOrder" text="Save Order">
         <font>
            <Font name="Futura Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="cancelOrderButton" layoutX="335.0" layoutY="550.0" mnemonicParsing="false" text="Cancel">
         <font>
            <Font name="Futura Bold" size="14.0" />
         </font>
      </Button>
   </children>

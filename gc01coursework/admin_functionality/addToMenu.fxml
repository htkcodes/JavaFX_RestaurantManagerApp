<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gc01coursework.admin_functionality.EditTheMenu">
   <children>
      <TextField fx:id="menuItemNameTextField" layoutX="148.0" layoutY="133.0" promptText="Menu Item Name">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="menuItemPriceTextField" layoutX="148.0" layoutY="195.0" promptText="Menu Item Price">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </TextField>
      <Label layoutX="67.0" layoutY="138.0" text="Name">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Label>
      <Label layoutX="67.0" layoutY="200.0" text="Price">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Label>
      <Label layoutX="115.0" layoutY="59.0" text="Add A New Menu Item">
         <font>
            <Font name="Futura Medium" size="16.0" />
         </font>
      </Label>
      <Button fx:id="addMenuItemButton" layoutX="140.0" layoutY="292.0" mnemonicParsing="false" onAction="#addMenuItem" text="Add">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Button>
      <Button fx:id="cancelMenuItemButton" layoutX="200.0" layoutY="292.0" mnemonicParsing="false" onAction="#cancelAddingMenuItem" text="Cancel">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>

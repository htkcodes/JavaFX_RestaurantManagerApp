<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gc01coursework.users_and_login.User">
   <children>
      <Label layoutX="130.0" layoutY="55.0" text="Add New Staff Member" textFill="#167fe0">
         <font>
            <Font name="Futura Medium" size="22.0" />
         </font>
      </Label>
      <TextField fx:id="employeeUsername" layoutX="138.0" layoutY="127.0" promptText="Username">
         <font>
            <Font name="Futura Medium" size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="employeePassword" layoutX="138.0" layoutY="183.0" promptText="Password">
         <font>
            <Font name="Futura Medium" size="16.0" />
         </font>
      </TextField>
      <Button fx:id="saveNewEmployee" layoutX="167.0" layoutY="266.0" mnemonicParsing="false" onAction="#saveEmployee" text="Save">
         <font>
            <Font name="Futura Medium" size="16.0" />
         </font>
      </Button>
      <Button fx:id="cancelAddingEmployee" layoutX="264.0" layoutY="266.0" mnemonicParsing="false" onAction="#cancelAddingEmployee" text="Cancel">
         <font>
            <Font name="Futura Medium" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
